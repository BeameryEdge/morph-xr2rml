@prefix xrr: <http://i3s.unice.fr/xr2rml#> .
@prefix rr:  <http://www.w3.org/ns/r2rml#> .
@prefix ex:  <http://example.com/> .
@prefix rml: <http://semweb.mmlab.be/ns/rml#> .
@prefix ql:	 <http://semweb.mmlab.be/ns/ql#> .


<#TMWithTableName>
    a rr:TriplesMap;
    xrr:logicalSource [
        rr:tableName "student";
        xrr:referenceFormulation xrr:Column;
    ];
    rr:subjectMap [ 
    	rr:template "http://example.org/student/{Column(id)}/{name}";
		rr:class ex:Student;
    ];
    rr:predicateObjectMap [
    	rr:predicate ex:name;
    	rr:objectMap [ 
    	    rr:template "{name}-{Column(id)/JSONPath($.*)}";
    	    rr:termType rr:Literal;
    	];
    ];
    rr:predicateObjectMap [
    	rr:predicate ex:nameBag;
    	rr:objectMap [ 
    		xrr:reference "Column(name)";
    		rr:termType xrr:RdfBag;
		];
    ].


<#SportBsk>
    a rr:TriplesMap;
    rr:logicalTable [
        rr:sqlQuery "select * from sport where id = 0";
    ];
    rr:subjectMap [ 
    	rr:template "http://example.org/sport/{id}";
		rr:class ex:Sport;
    ];
    rr:predicateObjectMap [
    	rr:predicate ex:name;
    	rr:objectMap [ rr:column "name"; ];
    ];
    rr:predicateObjectMap [
    	rr:predicate ex:colors;
    	rr:objectMap [ 
            xrr:reference "Column(shirt_colors)/JSONPath($.*)" ;
            rr:termType xrr:RdfList;
        ];
    ].


